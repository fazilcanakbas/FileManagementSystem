@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Dashboard</h1>
    </div>

    <!-- Content Row -->
    <div class="row">
        <!-- Dosya Sayısı Kart -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Toplam Dosya Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalFilesCount">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Klasör Sayısı Kart -->
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Toplam Klasör Sayısı
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800" id="totalFoldersCount">-</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-folder fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h6 class="m-0 font-weight-bold text-primary">Hoş Geldiniz</h6>
                </div>
                <div class="card-body">
                    <p>Dosya Yönetim Sistemi'ne hoş geldiniz. Bu panel üzerinden dosya ve klasör işlemlerinizi kolayca yapabilirsiniz.</p>
                    <p>Sol menüden ilgili bölümlere erişebilirsiniz.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Token kontrolü
            var token = localStorage.getItem("token");
            if (!token) {
                window.location.href = "/Home/Login";
                return;
            }

            // Kullanıcı adını göster
            $("#username").text(localStorage.getItem("username") || "Kullanıcı");

            // API base URL
            var apiBaseUrl = "https://localhost:5229/api"; // API URL'inizi buraya girin

            // İstatistikleri yükle
            loadDashboardData();

            function loadDashboardData() {
                // Dosya sayısı
                $.ajax({
                    url: apiBaseUrl + "/files/count",
                    type: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        $("#totalFilesCount").text(data || 0);
                    },
                    error: function () {
                        $("#totalFilesCount").text("!");
                    }
                });

                // Klasör sayısı
                $.ajax({
                    url: apiBaseUrl + "/folders/count",
                    type: "GET",
                    headers: {
                        "Authorization": "Bearer " + token
                    },
                    success: function (data) {
                        $("#totalFoldersCount").text(data || 0);
                    },
                    error: function () {
                        $("#totalFoldersCount").text("!");
                    }
                });
            }
        });
    </script>
}